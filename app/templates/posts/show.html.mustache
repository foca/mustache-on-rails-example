<h2>{{{ title }}}</h2>
{{{ body }}}

<div id="manage">
  {{{ edit_link }}}
</div>

<h3>Comments</h3>

<ol>{{# comments }}
  <li>{{{ comment }}}</li>
{{/ comments }}</ol>

<% form_for [@post, @comment] do |f| %>
  <div><%= f.label :body, "New comment" %>
    <%= f.text_area :body, :rows => 5, :columns => 40 %></div>
  <div><%= f.submit "Say your mind" %></div>
<% end %>
